<div class="container-fluid">
    <h1>Create New Feedback</h1>

    <div class="row p-4">
        <div class="col-md-10">
            <form method="POST" action="/admin/feedback/create" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="file">Name</label>
                    <input type="text" class="form-control" name="name" id="name" required>
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" name="description" id="description" class="form-control" placeholder="enter your content" required >
                    {{!-- <textarea name="description" id="description" class="form-control" placeholder="enter your content" cols="15" rows="5"></textarea> --}}
                </div>

                

                <button class="btn btn-outline-success btn-lg" type="submit">Create Feedback</button>


            </form>
        </div>
        
    </div>
</div>